# === Database ===
DB_USER=envo
DB_PASSWORD=CHANGE_ME_strong_password_here
DB_NAME=envo_db

# === JWT ===
JWT_SECRET=CHANGE_ME_random_64_char_string
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=720h

# === Google OAuth ===
# Update GOOGLE_REDIRECT_URL to your production domain
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URL=https://your-subdomain.yourdomain.com/api/v1/auth/google/callback

# === AWS KMS (optional — falls back to local encryption) ===
AWS_REGION=eu-north-1
AWS_KMS_KEY_ID=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# === Frontend URL (for CORS + OAuth redirects) ===
FRONTEND_URL=https://your-subdomain.yourdomain.com

# === Razorpay (optional — leave empty to disable billing) ===
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=
RAZORPAY_PLAN_STARTER=
RAZORPAY_PLAN_TEAM=

# === Nginx host port ===
HOST_PORT=80
